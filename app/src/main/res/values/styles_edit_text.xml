<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextInputEditTextStyle" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:theme">@style/ThemeForTextLayoutDefaultLight</item>
        <item name="hintTextAppearance">@style/TextAppearance.Input.Default</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Input.Default" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ThemeForTextLayoutDefaultLight" parent="ThemeForTextLayoutDefaultLight.Base">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorAccent">@color/purple_500</item>
    </style>

    <style name="ThemeForTextLayoutDefaultLight.Base" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
    </style>

</resources>